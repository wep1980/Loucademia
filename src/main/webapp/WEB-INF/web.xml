<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>Loucademia</display-name>
  <welcome-file-list>
    <welcome-file>bemVindo.faces</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>Faces Servlet</servlet-name>
    <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>Faces Servlet</servlet-name>
    <url-pattern>*.faces</url-pattern>
  </servlet-mapping>
  
  <!-- POLITICA DE SEGURANÇA QUE BLOQUEIA O ACESSO A TODAS AS PAGINAS XHTML -->
  <security-constraint>
     <web-resource-collection>
        <web-resource-name>XHTML Files</web-resource-name>
        <url-pattern>*.xhtml</url-pattern>
     </web-resource-collection>
     <auth-constraint /> <!-- AUTORIZAÇÃO PARA ACESSO AS PAGINAS XHTML **NINGUEM** -->
  </security-constraint>
</web-app>